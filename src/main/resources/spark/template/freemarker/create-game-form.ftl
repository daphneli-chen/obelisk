<div class="create-game-form">
    <input list="numHumanPlayers" name="numHumanPlayers" placeholder="Num human players">
    <datalist id="numHumanPlayers">
        <option value="1">
        <option value="2">
        <option value="3">
        <option value="4">
    </datalist>

    <input list="numAIPlayers" name="numAIPlayers" placeholder="Num AI players">
    <datalist id="numAIPlayers">
        <option value="0">
        <option value="1">
        <option value="2">
        <option value="3">
        <option value="4">
    </datalist>

    <input list="difficulty" name="difficulty" placeholder="Difficulty">
    <datalist id="difficulty">
        <option value="EVEN_EASIER">
        <option value="VERY_EASY">
        <option value="EASY">
        <option value="MOSTLY_EASY">
        <option value="NORMAL">
        <option value="ALMOST_HARD">
        <option value="HARD">
        <option value="VERY_HARD">
        <option value="EVEN_HARDER">
    </datalist>

    <input id="gameName" placeholder="Name">


</div>


